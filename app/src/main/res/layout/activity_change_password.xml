<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sign.createinfo.CreateInfoFragment">

    <LinearLayout
        android:id="@+id/llToolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/inter_700"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Đổi mật khẩu"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llToolBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/inter_400"
            android:paddingVertical="@dimen/_2sdp"
            android:text="Mật khẩu cũ"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/edtOldPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bg_edt_input"
            android:gravity="center_vertical"
            android:hint="Nhập mật khẩu cũ"
            android:inputType="textPassword"
            android:paddingHorizontal="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:fontFamily="@font/inter_400"
            android:paddingVertical="@dimen/_2sdp"
            android:text="Mật khẩu mới"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/edtNewPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bg_edt_input"
            android:gravity="center_vertical"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:paddingHorizontal="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:fontFamily="@font/inter_400"
            android:paddingVertical="@dimen/_2sdp"
            android:text="Xác nhận mật khẩu"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/edtConfirmNewPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bg_edt_input"
            android:gravity="center_vertical"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPassword"
            android:paddingHorizontal="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/txtChangePassword"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="@drawable/bg_btn_color_app"
            android:fontFamily="@font/inter_500"
            android:gravity="center"
            android:text="Đổi mật khẩu"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp" />


    </LinearLayout>


    <ProgressBar
        android:id="@+id/prgLoad"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        android:indeterminateDrawable="@drawable/progress_circle"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>