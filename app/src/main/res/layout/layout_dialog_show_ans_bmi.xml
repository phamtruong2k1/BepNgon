<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_16sdp"
    android:background="@drawable/bg_boder_white"
    android:paddingBottom="@dimen/_16sdp"
    android:paddingTop="@dimen/_6sdp">


    <ImageView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_600"
        android:gravity="center_vertical|right"
        android:src="@drawable/ic_baseline_close_24"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_500"
        android:gravity="center"
        android:text="Chỉ số BMI cảu bạn là:"
        android:textColor="@color/black"
        android:textSize="@dimen/_17sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/tvBMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_600"
        android:gravity="center"
        android:text="0000000"
        android:maxLength="6"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tvKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:text="Nhập nội dung báo cáo"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/_17sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBMI" />

    <TextView
        android:id="@+id/txtThap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_follow"
        android:paddingHorizontal="@dimen/_22sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:text="Xem tháp dinh dưỡng"
        android:layout_marginTop="@dimen/_12sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="@+id/tvKetQua"
        app:layout_constraintStart_toStartOf="@+id/tvKetQua"
        app:layout_constraintTop_toBottomOf="@+id/tvKetQua" />


</androidx.constraintlayout.widget.ConstraintLayout>